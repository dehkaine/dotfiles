{
	"snippets.ultisnips.pythonPrompt": false,
	// suggest
	"suggest.enablePreselect": true,
	"suggest.noselect": false,
	"suggest.acceptSuggestionOnCommitCharacter": true,
	"suggest.maxCompleteItemCount": 5,
	// diagnostic
  "diagnostic.virtualText": true,
	// format
  "json.format.enable": true,
  "yaml.format.enable": true,
	// lua
	"Lua": {
		"diagnostics":  {
			"globals": [ "vim", "hs" ]
		},
		"workspace": {
			"library": {
				"/usr/share/nvim/runtime/lua": true,
				"/usr/share/nvim/runtime/lua/vim": true,
				"/usr/share/nvim/runtime/lua/vim/lsp": true
			}
		}
	},
	// coc-snippets
	"snippets.textmateSnippetsRoots": ["~/.config/nvim/lua/snippets"],
	"snippets.autoTrigger": true,
	"snippets.ultisnips.enable" : false,
	"snippets.triggerCharacters": [],
	// coc-explorer
	"explorer.file.column.indent.indentLine": true,
	"explorer.file.showHiddenFiles": true,
	"explorer.icon.enableNerdfont": true,
	"explorer.keyMappingMode": "none",
	"explorer.buffer.showHiddenBuffers": false,
	"explorer.keyMappings.global": {
		"o": [ "expandable?", "expand", "open" ],
		"l": [ "expandable?", "expand", "open" ],
		"h": "collapse",
		"s": "open:vsplit",
		"v": "open:split",
		"t": "open:tab",
		"r": "rename",
		"n": "addFile",
		"d": "delete",
		"y": "copyFile",
		"p": "pasteFile"
	}
}
